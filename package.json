{
  "name": "issues-must-close",
  "version": "0.1.0",
  "description": "We can find issues of open source projects.",
  "keywords": [
    "nextjs",
    "react"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/roottool/issues-must-close.git"
  },
  "bugs": {
    "url": "https://github.com/roottool/issues-must-close/issues"
  },
  "author": {
    "name": "roottool",
    "url": "https://github.com/roottool"
  },
  "license": "MIT",
  "private": true,
  "scripts": {
    "preinstall": "npx only-allow yarn",
    "prepare": "npx is-ci || husky install",
    "dev": "cross-env NODE_OPTIONS='--inspect' next dev",
    "start": "next start",
    "codegen": "graphql-codegen --config codegen.yml",
    "build": "run-p build:*",
    "build:nextjs": "next build",
    "lint": "run-p -c lint:*",
    "lint:check-types": "tsc --noEmit",
    "lint:eslint": "eslint --color --ext .js,.ts,.tsx",
    "lint:prettier": "prettier --check .",
    "fix": "run-p -c fix:*",
    "fix:eslint": "eslint --fix --color --ext .js,.ts,.tsx",
    "format": "prettier --write .",
    "test": "echo \"Write tests!\" && exit 1"
  },
  "importSort": {
    ".js,.ts,.tsx": {
      "parser": "typescript",
      "style": "module"
    }
  },
  "lint-staged": {
    "*.{js|ts|tsx}": [
      "yarn fix",
      "yarn format"
    ],
    "*.{json|md}": [
      "yarn format"
    ],
    ".{eslint|prettier}rc": [
      "yarn format"
    ],
    "*.{g|graph}ql": [
      "yarn codegen"
    ]
  },
  "dependencies": {
    "@adobe/react-spectrum": "^3.12.0",
    "@octokit/auth-app": "^3.6.0",
    "@octokit/graphql": "^4.6.4",
    "graphql": "^15.5.1",
    "next": "^11.1.0",
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "react-select": "^4.3.1",
    "swr": "^0.5.6"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^4.0.3",
    "@graphql-codegen/cli": "2.0.1",
    "@graphql-codegen/typescript": "2.0.0",
    "@graphql-codegen/typescript-document-nodes": "^2.0.0",
    "@graphql-codegen/typescript-operations": "2.0.1",
    "@octokit/graphql-schema": "^10.60.1",
    "@types/node": "^16.6.1",
    "@types/react": "^17.0.17",
    "@types/react-dom": "^17.0.8",
    "@types/react-select": "^4.0.17",
    "@typescript-eslint/eslint-plugin": "^4.29.1",
    "@typescript-eslint/parser": "^4.29.1",
    "autoprefixer": "^10.3.1",
    "cross-env": "^7.0.2",
    "eslint": "^7.32.0",
    "eslint-config-next": "^11.1.0",
    "eslint-config-prettier": "^8.2.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.24.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-sort-destructure-keys": "^1.3.5",
    "eslint-plugin-sort-keys-fix": "^1.1.1",
    "eslint-plugin-typescript-sort-keys": "^1.7.0",
    "husky": ">=6.0.0",
    "import-sort-style-module": "^6.0.0",
    "lint-staged": ">=11.1.1",
    "next-compose-plugins": "^2.2.0",
    "next-transpile-modules": "^8.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.6",
    "prettier": "^2.1.2",
    "tailwindcss": "^2.2.7",
    "typescript": "^4.0.3"
  }
}
